# OAuth Configuration
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/oauth2callback
WORKSPACE_MCP_PORT=8000
WORKSPACE_MCP_BASE_URI=http://localhost

# Google OAuth Credentials
# Get these from Google Cloud Console
# GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_OAUTH_CLIENT_SECRET=GOCSPX-your-secret

# Auto-open browser for OAuth
GOOGLE_OAUTH_AUTO_OPEN_BROWSER=true

# Disable OAuth 2.1 for now (use standard OAuth 2.0)
MCP_ENABLE_OAUTH21=false

# ElevenLabs Text-to-Speech Configuration
# Get from https://elevenlabs.io/
# XI_API_KEY=sk_your_api_key
# XI_VOICE_ID=your_voice_id

# OMNI Genie - Local Instance
# OMNI_BASE_URL=http://localhost:8882/
# OMNI_API_KEY=your_api_key
# OMNI_MASTER_PHONE=your_phone_number
# OMNI_MASTER_GROUP=your_group_id@g.us

# ===================================
# Hub Multi-Tenant Configuration
# ===================================

# Database
HUB_DATABASE_PATH=./hub_data/hub.db
SQL_ECHO=false

# AuthKit (WorkOS)
WORKOS_API_KEY=sk_test_...
WORKOS_CLIENT_ID=client_...
WORKOS_COOKIE_PASSWORD=... # Generate with: openssl rand -base64 24
WORKOS_REDIRECT_URI=http://localhost:8000/auth/callback

# Hub Server
HUB_HOST=0.0.0.0
HUB_PORT=8000
